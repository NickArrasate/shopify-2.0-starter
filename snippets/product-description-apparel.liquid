{% render 'sizing-chart-switcher' %}

{% render 'product-badges' %}

{% unless product.description == blank or hide_description %}
  <div class="product-description rte" data-product-description>
    {{ description }}
  </div>
{% endunless %}
<nav class="product-tabs">
  <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
  {% if features != '' %}
    <a class="nav-item nav-link active" id="nav-features-tab" data-toggle="tab" href="#nav-features" role="tab" aria-controls="nav-features" aria-selected="true">Features</a>
  {% endif %}
  {% if materials != '' %}
    <a class="nav-item nav-link" id="nav-materials-tab" data-toggle="tab" href="#nav-materials" role="tab" aria-controls="nav-materials" aria-selected="false">Materials</a>
  {% endif %}
  {% if care != '' %}
    <a class="nav-item nav-link" id="nav-care-tab" data-toggle="tab" href="#nav-care" role="tab" aria-controls="nav-care" aria-selected="false">Care Instructions</a>
  {% endif %}
  {% if needsChart %}
    <a class="nav-item nav-link" id="nav-sizing-tab" data-toggle="tab" href="#nav-sizing" role="tab" aria-controls="nav-sizing" aria-selected="false">Sizing Chart</a>
  {% endif %}
  {% if needsRackChart %}
    <a class="nav-item nav-link" id="nav-rack-tab" data-toggle="tab" href="#nav-rack" role="tab" aria-controls="nav-sizing" aria-selected="false">Sizing Chart</a>
  {% endif %}
  </div>
</nav>
<div class="tab-content" id="nav-tabContent">
{% if features != '' %}
  <div class="tab-pane fade show active" id="nav-features" role="tabpanel" aria-labelledby="nav-features-tab">
    {{features}}
  </div>
{% endif %}
{% if materials != '' %}
  <div class="tab-pane fade" id="nav-materials" role="tabpanel" aria-labelledby="nav-materials">
  {{materials}}
  </div>
{% endif %}
{% if care != '' %}
  <div class="tab-pane fade" id="nav-care" role="tabpanel" aria-labelledby="nav-art-care">
  {{care}}
  </div>
{% endif %}
{% if needsChart %}
  <div class="tab-pane fade" id="nav-sizing" role="tabpanel" aria-labelledby="nav-art-sizing">
    <div class="sizing-chart-wrap">
      {% render 'sizing-chart-handler' %}
    </div>
  </div>
{% endif %}
{% if needsRackChart %}
  <div class="tab-pane fade" id="nav-rack" role="tabpanel" aria-labelledby="nav-rack">
    <div class="sizing-chart-wrap">
      {{ rack_table }}
    </div>
  </div>
{% endif %}
</div>
