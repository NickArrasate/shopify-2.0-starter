{% assign descriptionArray = product.description | split: '<!--description-->' %}
{% assign description = descriptionArray[1] %}

{% assign featuresArray = product.description | split: '<!--features-->' %}
{% assign features = featuresArray[1] %}

{% assign materialsArray = product.description | split: '<!--materials-->' %}
{% assign materials = materialsArray[1] %}

{% assign careArray = product.description | split: '<!--care-instructions-->' %}
{% assign care = careArray[1] %}

