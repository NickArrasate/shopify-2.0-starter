<div class="promo-mosaic--row">
  <div class="promo-mosaic--column promo-mosaic--column-wide">
    {%
      render 'promo-block',
      block: section.blocks[0],
      text_alignment: text_alignment,
      compress_blocks: compress_blocks
    %}
  </div>

  <div class="promo-mosaic--column promo-mosaic--column-narrow">
    {%
      render 'promo-block',
      block: section.blocks[1],
      text_alignment: text_alignment,
      compress_blocks: compress_blocks
    %}
    {%
      render 'promo-block',
      block: section.blocks[2],
      text_alignment: text_alignment,
      compress_blocks: compress_blocks
    %}
  </div>
</div>
