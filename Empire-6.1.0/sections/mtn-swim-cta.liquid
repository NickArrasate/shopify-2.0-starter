<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="dynamic-rich-text"
></script>
{% if section.settings.show %}
<div class="mtn-swim-cta-upper">
  {% if section.settings.image != blank %}
  <img src="{{ section.settings.image | img_url: '1200x' }}" class="cta-full-width-image">
  {% endif %}
</div>
{% endif %}
<section
  class="
    mtn-swim-cta-lower
    rich-text--container
    shopify-section
    rich-text-{{ section.settings.width }}
  "
>
  {% for block in section.blocks %}
    <div
      class="
        rich-text-block
        {% if block.type == 'text' %}
          rich-text-alignment-{{ block.settings.text_alignment }}
        {% endif %}
      "
      {{ block.shopify_attributes }}
    >
      {% if block.type == 'text' %}
        {% if block.settings.title != blank %}
          <h2
            style="margin-top:0;"
          >
            {{ block.settings.title | escape }}
          </h2>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="rich-text-content rte" data-rte>
            {{ block.settings.text }}
          </div>
        {% endif %}
      {% elsif block.type == 'page' and block.settings.page %}
        {% if block.settings.show_heading %}
          <h2
          class="emphasized-title emphasized-title-{{ block.settings.heading_size }}"
          >
            {{ pages[block.settings.page].title | escape }}
          </h2>
        {% endif %}

        <div class="rich-text-content rte" data-rte>
          {{ pages[block.settings.page].content }}
        </div>
      {% endif %}
    </div>
  {% endfor %}
  <div class="row cta-log-row">
    <div class="col cta-log-box text-center">
      <img src="{{ section.settings.logo_1 | img_url: '300x'}}" alt="">
      <p class="small">{{ section.settings.text_1 }}</p>
    </div>
    <div class="col cta-log-box text-center">
      <img src="{{ section.settings.logo_2 | img_url: '300x'}}" alt="">
      <p class="small">{{ section.settings.text_2 }}</p>
    </div>
    <div class="col cta-log-box text-center">
      <img src="{{ section.settings.logo_3 | img_url: '300x'}}" alt="">
      <p class="small">{{ section.settings.text_3 }}</p>
    </div>
    <div class="col cta-log-box text-center">
      <img src="{{ section.settings.logo_4 | img_url: '300x'}}" alt="">
      <p class="small">{{ section.settings.text_4 }}</p>
    </div>
  </div>
</section>

{% schema %}
