<script
  type="application/json"
  data-section-type="static-slideshow"
  data-section-id="{{ section.id }}"
  data-section-data
>
  {
    "enable_autoplay": {{ section.settings.enable_autoplay | json }},
    "autoplay_duration": {{ section.settings.autoplay_duration | json }}
  }
</script>

{% assign hero_meta_image= page.metafields["global"]["hero_image"] %}
{% assign hero_meta_image_mobile = page.metafields["global"]["hero_mobile_image"] %}
{% assign metaPos = page.metafields["global"]["header_content_pos"]  | default: 'left' %}

{% assign slideshow_crop = 'center' %}

{% if section.settings.slideshow_height == 'original' %}
  {% assign slideshow_crop = false %}
{% endif %}


{% if section.settings.show_slideshow %}
  <section
    class="
      header-small-hide
      slideshow
      slideshow-dots-{{ section.settings.slideshow_height }}
    "
    aria-label="Slide show"
  >
    {% for block in section.blocks %}
      {% capture placeholder_slide_image %}
        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
        {% assign placeholder_style = 'lifestyle-' | append: current %}
        {%-
          render 'placeholder_svg_uri'
          placeholder: placeholder_style
        -%}
      {% endcapture %}

      <div
        class="
          slideshow-slide
          slideshow-height-{{ section.settings.slideshow_height }}
          {% if block.settings.background_image == blank %}
            placeholder--image
          {% endif %}
        "
        tabindex="0"
        aria-label="Slide {{ forloop.index }} of {{ section.blocks.size }}"
        {{ block.shopify_attributes }}

      >
        {% if block.settings.link != blank %}
          <a
            class="
              slideshow-link
              slideshow-background-link
              slideshow-height-{{ section.settings.slideshow_height }}
            "
            href="{{ block.settings.link }}"
            tabindex="-1"
          ></a>
        {% endif %}

        {% assign slideshow_crop = 'center' %}

        {% if section.settings.slideshow_height == 'original' %}
          {% assign slideshow_crop = false %}
        {% endif %}

        <div
          class="
            slideshow-background
            slideshow-background--{{ block.id }}
            background-target-{{ block.id }}
            {% if section.settings.sticky %}slideshow-background-sticky{% endif %}
            slideshow-height-{{ section.settings.slideshow_height }}
            {% if hero_meta_image == blank %}
              placeholder--image
            {% endif %}
          "
          {% if hero_meta_image %}
            style="background-image: url('{{ hero_meta_image }}')"
          {% elsif section.settings.background_image %}
            {%
              render 'rimg',
              img: section.settings.background_image,
              size: '2000x2000',
              crop: slideshow_crop,
              lazy: true,
              background: true,
            %}
          {% else %}
            style="background-image: url('{{ placeholder_slide_image | strip }}')"
          {% endif %}
          data-themecolor="{{ settings.color_text }}"
          data-slidecolor="{{ block.settings.color }}"
        >
          {% comment %}{% if hero_meta_image %}
            {%
              render 'rimg',
              img: hero_meta_image,
              class: 'slideshow-image',
              size: '1000x1000',
              crop: slideshow_crop,
              lazy: true,
              canvas: true,
            %}
            <img
              class=""
              src="{{ hero_meta_image }}"
              alt=""
            >
          {% else %}
            <img
              class="slideshow-image"
              src="{{ placeholder_slide_image | strip }}"
              alt=""
            >
          {% endif %}{% endcomment %}

          {% if block.settings.show_overlay %}
            <div
              class="
                slideshow-slide-overlay
                slideshow-slide-overlay--{{ block.id }}
              "
            ></div>
          {% endif %}
        </div>

        {% if block.settings.title != blank
          or block.settings.text != blank
          or block.settings.button_one_label != blank
          or block.settings.button_two_label != blank
          or page.title != blank
        %}
        <div
          class="
            slideshow-slide-content
            slideshow-slide-content--{{ block.id }}
            text-align-{{ metaPos }}
            content-{{ metaPos }}
          "
        >
          <div class="slideshow-slide-background" style="background-color:{{ block.settings.text_background_color }};">
            <div class="emphasized-title-container">
              <h1 class="hero__title emphasized-title emphasized-title--large ">
                  {{ page.title | escape }}
                </h1>
              <div class="slideshow-subcontent d-flex">
              {% if block.settings.text != blank %}
                <p class="slideshow-slide-text">
                  {{ block.settings.text | escape }}
                </p>
              {% endif %}
              </div>
            </div>
          </div>
        </div>
        {% endif %}
      </div>
      {% render
        'header-image-helper',
        index: forloop.index,
        metas: true
      %}
    {% endfor %}

    {%
      render 'slideshow-overlay',
      blocks: section.blocks
    %}
  </section>
  <div class="small-show emphasized-title-container right lifestyle">
    <h4 class="emphasized-title emphasized-title--large">
      {{ page.title }}
    </h4>
  </div>
{% endif %}
{% schema %}
{
  "name": "Slideshow Base",
  "class": "slideshow--section header",
  "settings": [
    {
      "id": "show_slideshow",
      "type": "checkbox",
      "label": "Enable slideshow",
      "default": true
    },
    {
      "id": "enable_autoplay",
      "type": "checkbox",
      "label": "Autoplay slideshow",
      "default": true
    },
    {
      "id": "sticky",
      "type": "checkbox",
      "label": "Keep text content in slideshow on mobile?",
      "default": false
    },
    {
      "id": "autoplay_duration",
      "type": "range",
      "label": "Autoplay slide duration",
      "min": 5,
      "max": 12,
      "step": 1,
      "unit": "sec",
      "default": 8
    },
    {
      "id": "slideshow_height",
      "type": "select",
      "label": "Slideshow height",
      "options": [
        {
          "value": "small",
          "label": "Small - 300"
        },
        {
          "value": "medium",
          "label": "Medium - 400"
        },
        {
          "value": "large",
          "label": "Large - 560"
        },
        {
          "value": "dynamic",
          "label": "Dynamic"
        }
      ],
      "default": "dynamic"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "id": "background_image",
          "type": "image_picker",
          "label": "Background image",
          "info": "1800x1000 recommended"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image (Mobile View)"
        },
        {
          "id": "title",
          "type": "text",
          "label": "Heading",
          "default": "Base"
        },
        {
          "id": "text",
          "type": "text",
          "label": "Subheading"
        },
        {
          "id": "color",
          "type": "color",
          "label": "Text color",
          "default": "#1a1919"
        },
        {
          "id": "text_alignment",
          "type": "select",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "header",
          "content": "Overlay"
        },
        {
          "id": "show_overlay",
          "type": "checkbox",
          "label": "Show overlay",
          "default": true
        },
        {
          "id": "text_background_color",
          "type": "color",
          "label": "Color",
          "default": "#ffffff"
        },
        {
          "id": "overlay_color",
          "type": "color",
          "label": "Color",
          "default": "#ffffff"
        },
        {
          "id": "overlay_opacity",
          "type": "range",
          "label": "Opacity",
          "min": 1,
          "max": 100,
          "step": 1,
          "unit": "%",
          "default": 50
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "slide"
      },
      {
        "type": "slide"
      }
    ]
  }
}

{% endschema %}
