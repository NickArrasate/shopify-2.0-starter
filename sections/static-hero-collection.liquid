{% assign textArray = collection.description | split: "<!-- heading -->"%}
{% assign headerText = textArray[1] %}
{% assign headerSubtext = textArray[2] %}
{% assign metaPos = collection.metafields["global"]["header_content_pos"]  | default: 'left' %}


{% if collection.metafields["global"]["hero_image"] != blank  %}
{% assign hero_meta_image = collection.metafields["global"]["hero_image"] %}
  {% if collection.metafields["global"]["hero_mobile_image"] != blank %}
    {% assign hero_meta_image_mobile = collection.metafields["global"]["hero_mobile_image"] %}
  {% endif %}
{% elsif  section.settings.background_image %}
{% assign collHero = section.settings.background_image | img_url: '1500x' %}
{% else %}
{% assign collHero = blank %}
{% endif %}
{% assign metaPos = collection.metafields["global"]["header_content_pos"]  | default: 'left' %}
<script
  type="application/json"
  data-section-type="static-slideshow"
  data-section-id="{{ section.id }}"
  data-section-data
>
  {
    "enable_autoplay": {{ section.settings.enable_autoplay | json }},
    "autoplay_duration": {{ section.settings.autoplay_duration | json }}
  }
</script>
{% if hero_meta_image != blank %}
{% assign collHero = hero_meta_image %}
{% endif %}
{% if collHero != blank %}
  <section
    class="
      header-small-hide
      slideshow
      slideshow-dots-{{ section.settings.slideshow_height }}
    "
    aria-label="Slide show"
  >
    {% for block in section.blocks %}
      {% capture placeholder_slide_image %}
        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
        {% assign placeholder_style = 'lifestyle-' | append: current %}
        {%-
          render 'placeholder_svg_uri'
          placeholder: placeholder_style
        -%}
      {% endcapture %}

      <div
        class="
          slideshow-slide
          slideshow-height-{{ section.settings.slideshow_height }}
        "
        tabindex="0"
        aria-label="Slide {{ block.id}} of {{ section.blocks.size }}"
        {{ block.shopify_attributes }}
      >
        {% if block.settings.link != blank %}
          <a
            class="
              slideshow-link
              slideshow-background-link
              slideshow-height-{{ section.settings.slideshow_height }}
            "
            href="{{ block.settings.link }}"
            tabindex="-1"
          ></a>
        {% endif %}

        {% assign slideshow_crop = 'center' %}

        {% if section.settings.slideshow_height == 'original' %}
          {% assign slideshow_crop = false %}
        {% endif %}

        <div
          class="
            background-target
            background-target-{{ block.id}}
            slideshow-background
            slideshow-background--{{ block.id}}
            {% if section.settings.sticky %}slideshow-background-sticky{% endif %}
            slideshow-height-{{ section.settings.slideshow_height }}
            {% if collHero == blank %}
              placeholder--image
            {% endif %}
          "
          {% if hero_meta_image %}
            style="background-image: url('{{ hero_meta_image }}')"
          {% elsif collHero %}
            {% comment %} {%
              render 'rimg',
              img: collHero,
              size: '2000x2000',
              crop: slideshow_crop,
              lazy: true,
              background: true,
              placeholder: '500x500',
            %} {% endcomment %}
            style="background-image: url('{{ collHero }}')"
          data-themecolor="{{ settings.color_text }}"
          data-slidecolor="{{ block.settings.color }}"
          {% endif %}
        >

          {% if block.settings.show_overlay %}
            <div
              class="
                slideshow-slide-overlay
                slideshow-slide-overlay--{{ block.id }}
              "
            ></div>
          {% endif %}
        </div>
          <div
            class="
              slideshow-slide-content
              slideshow-slide-content--{{ block.id }}
              text-align-{{ metaPos }}
              content-{{ metaPos }}
            "
          >
          <div class="slideshow-slide-background" style="background-color:{{ block.settings.text_background_color }};">
              <div class="emphasized-title-container">
              <h1 class="emphasized-title emphasized-title--large {% if block.settings.link != blank %} hero__title--has-link{% endif %}">
                {{ collection.title }}
              </h1>
              <div class="slideshow-subcontent d-flex">
              {% if block.settings.text != blank %}
                <p class="slideshow-slide-text">
                  {{ block.settings.text | escape }}
                </p>
              {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
      {% render
        'header-image-helper',
        index: block.id,
        metas: true
      %}
    {% endfor %}

    {%
      render 'slideshow-overlay',
      blocks: section.blocks
    %}
  </section>
  <div class="small-show emphasized-title-container right lifestyle">
    <h4 class="emphasized-title emphasized-title--large">
      {{ collection.title }}
    </h4>
  </div> 
{% else%}
<div class="collection--information">
  <div
            class="
              text-align-center
              content-center
            "
            style="text-align: center;"
          >
        <h1 class="collection--title emphasized-title emphasized-title--large">
          {{ collection.title }}
        </h1>
  </div>
</div>
{% endif %}
{% schema %}
{
  "name": "Collection Hero",
  "class": "slideshow--section header",
  "settings": [
    {
      "id": "enable_autoplay",
      "type": "checkbox",
      "label": "Autoplay slideshow",
      "default": true
    },
    {
      "id": "sticky",
      "type": "checkbox",
      "label": "Keep text content in slideshow on mobile?",
      "default": false
    },
    {
      "id": "autoplay_duration",
      "type": "range",
      "label": "Autoplay slide duration",
      "min": 5,
      "max": 12,
      "step": 1,
      "unit": "sec",
      "default": 8
    },
    {
      "id": "slideshow_height",
      "type": "select",
      "label": "Slideshow height",
      "options": [
        {
          "value": "small",
          "label": "Small - 340"
        },
        {
          "value": "medium",
          "label": "Medium - 400"
        },
        {
          "value": "large",
          "label": "Large - 560"
        },
        {
          "value": "dynamic",
          "label": "Dynamic"
        }
      ],
      "default": "dynamic"
    },
    {
      "type": "paragraph",
      "content": "To override the default collection title value of the static hero, use the collection description editor on the collection admin page and wrap the desired header in the '<!-- heading -->' tag."
    },
    {
      "id": "background_image",
      "type": "image_picker",
      "label": "Fallback background image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Fallback Image (Mobile View)"
    },
    {
      "id": "bg_color",
      "type": "color",
      "label": "BG Color",
      "default": "#1a1919"
    },
    {
      "id": "text_color",
      "type": "color",
      "label": "Text Color",
      "default": "#1a1919"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "id": "text",
          "type": "text",
          "label": "Subheading"
        },
        {
          "id": "color",
          "type": "color",
          "label": "Text color",
          "default": "#1a1919"
        },
        {
          "type": "header",
          "content": "Overlay"
        },
        {
          "id": "show_overlay",
          "type": "checkbox",
          "label": "Show overlay",
          "default": false
        },
        {
          "id": "text_background_color",
          "type": "color",
          "label": "Color",
          "default": "#ffffff"
        },
        {
          "id": "overlay_color",
          "type": "color",
          "label": "Color",
          "default": "#000000"
        },
        {
          "id": "overlay_opacity",
          "type": "range",
          "label": "Opacity",
          "min": 1,
          "max": 100,
          "step": 1,
          "unit": "%",
          "default": 50
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "slide"
      },
      {
        "type": "slide"
      }
    ]
  }
}

{% endschema %}
