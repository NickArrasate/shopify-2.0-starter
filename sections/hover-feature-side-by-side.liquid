
{% assign bg_color = section.settings.bg_color %}
<div>
<section class="promo-mosaic--container d-flex hover-feature-section sidy-by-side">
  <div class="home-section--content hover-feature-content d-flex flex-column half">
  <div class="hover-feature-image-wrap half">
    <img src="{{ section.settings.bg_image | img_url: '1200x' }}">
  </div>
  {% if section.settings.link %}
  <a href="{{section.settings.link}}">
  {% endif %}
    <div class="hover-feature-text-wrap" style="color: {{section.settings.text_color}};">
      <div class="text">
        <h2 class="hov-feat" style="color:inherit !important">{{ section.settings.title }}</h2>
        <div class="hov-feat" style="color:inherit !important">{{ section.settings.copy }}</div>
      </div>
      <div class="cta text-center">
        <span class="hover-feature-cta btn button button-secondary">{{ section.settings.cta_text_1 }}</span>
      </div>
    </div>
  {% if section.settings.link %}
  </a>
  {% endif %}

  </div>

<div class="home-section--content hover-feature-content d-flex flex-column half">
  <div class="hover-feature-image-wrap half">
    <img src="{{ section.settings.bg_image-2 | img_url: '1200x' }}">
  </div>
{% if section.settings.link-2 %}
  <a href="{{section.settings.link-2}}">
  {% endif %}
    <div class="hover-feature-text-wrap rev" style="color: {{section.settings.text_color}};">
      <div class="text">
        <h2 class="hov-feat" style="color:inherit !important">{{ section.settings.title-2 }}</h2>
        <div class="hov-feat" style="color:inherit !important">{{ section.settings.copy-2 }}</div>
      </div>
      <div class="cta text-center">
        <span class="hover-feature-cta btn button button-secondary">{{ section.settings.cta_text_2 }}</span>
      </div>
    </div>
  {% if section.settings.link-2 %}
  </a>
  {% endif %}
  </div>
</section>
</div>
<style type="text/css">
.hover-feature-content > .hov-feat, .hover-feature-content > h2.hov-feat, .hover-feature-content > .hov-feat > p {
  color: {{section.settings.text_color}};
}
.hover-feature-content:hover > .hover-feature-text-wrap, .hover-feature-content:hover > a > .hover-feature-text-wrap{
  background-color: {{ bg_color }};
  color: {{section.settings.text_hov_color}} !important;
}
.hover-feature-content:hover > .hov-feat, .hover-feature-content:hover > h2.hov-feat, .hover-feature-content:hover > .hov-feat > p {
  color: {{section.settings.text_hov_color}} !important;
}
</style>

{% schema %}
{
  "name": "Hover Feature 2x",
  "class": "hover-feature-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "HAVE YOU REGISTERED TO VOTE?"
    },
    {
      "type": "richtext",
      "id": "copy",
      "label": "Main Copy",
      "default": "<p>We're weeks from a historic election. Make sure you register to vote.</p>"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link 1 (optional)"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1a1919"
    },
    {
      "type": "color",
      "id": "text_hov_color",
      "label": "Text hover color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#17385A"
    },
    {
    "type": "image_picker",
    "id": "bg_image",
    "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title-2",
      "label": "Heading 2",
      "default": "MEET OUR ATHLETES"
    },
    {
      "type": "richtext",
      "id": "copy-2",
      "label": "Main Copy 2",
      "default": "<p>Meet the badass individuals we call family.</p>"
    },
    {
    "type": "image_picker",
    "id": "bg_image-2",
    "label": "Background Image 2"
    },
    {
      "type": "url",
      "id": "link-2",
      "label": "Link 2 (optional)"
    },
    {
      "type": "text",
      "id": "cta_text_1",
      "label": "CTA TEXT (optional)",
      "default": "Register"
    },
    {
      "type": "text",
      "id": "cta_text_2",
      "label": "CTA 2 TEXT (optional)",
      "default": "Shop"
    }
  ],
  "presets": [
    {
      "name": "Hover Feature 2x",
      "category": "Image"
    }
  ]
}

{% endschema %}
