<div class="page-width">
  <div class="row">
  {% for tm in section.blocks %}
  <div class="col-12 col-md-3 tm-box">
    <a  class="tm-info-hover" data-toggle="modal" data-target="#modal{{forloop.index}}">
      <img style="max-width: 100%" src="{{ tm.settings.image | img_url: '600x600' }}">
      <div class="tm-info-hover-content text-center">
        <strong class="text-center">{{tm.settings.name}}</strong>
        <div class="tm-info-hover-content-inner">
          <div class="text-center">{{tm.settings.role}}</div>
          <small class="text-center">more</small>
        </div>
      </div>
    </a>
  </div>

<div class="modal fade" id="modal{{forloop.index}}" tabindex="-1" role="dialog" aria-labelledby="modal{{forloop.index}}" aria-hidden="true">
  <div class="modal-dialog  modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-close-wrap">
        <button type="button" class="close text-right" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body row">
          <div class="col-md-4">
          <img style="max-width: 100%" src="{{ tm.settings.image | img_url: '600x600' }}">
        </div>
        <div class="col-md-8 member-text">
          <h3 class="">{{tm.settings.name}}</h3>
          <small class="">{{tm.settings.role}}</small>
          <p class="">{{tm.settings.modal_text}}</p>
          {% if tm.settings.insta %}
            <a
              class="share-buttons--button share-buttons--instagram"
              target="_blank"
              style="color: #444"
              href="{{ tm.settings.insta }}">
              {%-
                render 'social-icon',
                id: 'instagram'
              -%}
              <span class="visually-hidden">Visit Instagram</span>
            </a>
        {% endif %}
        </div>
        <div class="col-12 modal-divider"></div>
          <div class="col-12 row" style="margin-left: 0;">
            <div class="col-sm-4 text-center athlete-icon"><img src="{{ 'home.svg' | asset_url }}" alt=""><p class="text-center small">Hometown: {{tm.settings.modal_town}}</p></div>
            <div class="col-sm-4 text-center athlete-icon"><img src="{{ 'mountain.svg' | asset_url }}" alt=""><p class="text-center small">Favorite Mountain: {{tm.settings.modal_mountain}}</p></div>
            <div class="col-sm-4 text-center athlete-icon"><img src="{{ 'snowboard.svg' | asset_url }}" alt=""><p class="text-center small">Ski of Choice: {{tm.settings.modal_ski}}</p></div>
          </div>
      </div>
    </div>
  </div>
</div>


{% endfor %}
</div>
</div>



{% schema %}
  {
    "name": "About team grid",
    "class": "index-section team-grid",
    "settings": [
      {
        "type": "header",
        "content": "Grid Section"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Team Member",
        "settings": [
          {
            "type": "header",
            "content": "Grid Item"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Team Member Name"
          },
          {
            "type": "text",
            "id": "role",
            "label": "Team Member Role"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": {
              "pt-BR": "Imagem",
              "it": "Immagine",
              "en": "Image",
              "es": "Imagen",
              "de": "Foto",
              "ja": "画像",
              "fr": "Image"
            }
          },
          {
            "type": "header",
            "content": "Modal Content"
          },
          {
            "type": "richtext",
            "id": "modal_text",
            "label": "Main Modal Text",
            "default": "<p></p>"
          },
          {
            "type": "text",
            "id": "modal_town",
            "label": "Home Town"
          },
          {
            "type": "text",
            "id": "modal_mountain",
            "label": "Home Mountain"
          },
          {
            "type": "text",
            "id": "modal_ski",
            "label": "Ski of Choice"
          },
          {
            "type": "text",
            "id": "insta",
            "label": "Instagram Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": {
          "pt-BR": "Blocos de links múltiplos",
          "it": "Più gruppi di link",
          "en": "Multiple link blocks",
          "es": "Enlaces múltiples",
          "de": "Mehrere Linkblöcke",
          "ja": "複数のリンクのブロック",
          "fr": "Blocs de liens multiples"
        },
        "category": "CTA"
        }
      ]
      }
{% endschema %}
